
public class Test {
public static void main(String[] args){
	int n=0;
	for (int i = 0; i < 17; i++) {
		if (i>17/2) {
			n=17-1-i;
		}else {
			n=i;
		}
		for (int j = 0; j < 17; j++) {
			if (i%2==0) {
				if (j>=n&&j<=17-1-n) {
					System.out.print("*");
				}else {
					System.out.print((j%2==0)?"*":" ");
				}
			}else {
				if (j>=n&&j<=17-1-n) {
					System.out.print(" ");
				}else {
					System.out.print((j%2==0)?"*":" ");
				}
			}
		}
		System.out.println();
	}
}
}
